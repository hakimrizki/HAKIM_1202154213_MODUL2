<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="id.hakimrizki.hakim_1202154213_modul2.TakeAwayActivity">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Identitas Pemesan : "
        android:textSize="20sp"/>

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/edNama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nama"/>

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/edPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Phone"/>

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/edAlamat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Alamat"/>

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/edCatatan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Catatan"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_tanggal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/holo_blue_light"
            android:text="Pilih Hari"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_jam"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="Pilih Jam"/>

    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_pilih"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pilih Pesanan"/>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tanggal yang dipilih = "
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_jam"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Waktu yang dipilih = "
        android:textSize="15sp"/>

</LinearLayout>
